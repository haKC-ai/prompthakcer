{
  "manifest_version": 3,
  "name": "PromptForge - AI Prompt Optimizer",
  "version": "1.0.0",
  "description": "Optimize your AI prompts for maximum efficiency. Reduce tokens, improve clarity, and learn better prompting techniques. Works with ChatGPT, Claude, Gemini, Grok, and any AI chat.",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "PromptForge - Optimize Your Prompts"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/rules-engine.js",
        "lib/site-detector.js",
        "lib/history-manager.js",
        "content/content.js"
      ],
      "css": [
        "content/modal.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/modal.css", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "optimize-prompt": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Optimize the current prompt"
    }
  }
}
