{
  "manifest_version": 3,
  "name": "PromptForge - AI Prompt Optimizer",
  "version": "1.0.1",
  "description": "Optimize AI prompts for efficiency. Reduce tokens, improve clarity, and learn better prompting. Works with any AI chat.",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "PromptForge - Optimize Your Prompts"
  },
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/modal.css", "icons/*", "lib/*", "content/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "optimize-prompt": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Optimize the current prompt"
    }
  }
}
