{
  "version": "1.1.0",
  "updated": "2025-12-03",
  "rules": [
    {
      "id": "remove-greetings",
      "name": "Remove Greetings",
      "description": "Removes \"Hey there\", \"Hope you're well\" etc.",
      "explanation": "Greetings waste tokens - AI doesn't need social pleasantries.",
      "example": { "before": "Hey there! Hope you're having a great day!", "after": "" },
      "enabled": true,
      "category": "fluff",
      "priority": 5,
      "patterns": [
        { "find": "^(hey|hi|hello|greetings|howdy|yo|sup|what's up|good morning|good afternoon|good evening)( there)?[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bhope you'?r?e? (having|doing|feeling)[\\w\\s]*[!.]\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bhope (this finds you well|all is well|you'?r?e? well|everything is going well)[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bhave a (great|wonderful|nice|good|lovely|fantastic|amazing) (day|one|evening|night)[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bthanks[!.,]?\\s*$", "flags": "gim", "replace": "" },
        { "find": "\\bthank you[!.,]?\\s*$", "flags": "gim", "replace": "" },
        { "find": "\\bthanks[!.,]?\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bthank you[!.,]?\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bthanks (again|so much|a lot|in advance|a bunch|a ton|for that|for this|for everything|for your help|for your time|for your assistance|for helping|a million|heaps|muchly)[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bthank you (so much|very much|again|in advance|for your time|for your help|for your assistance|for that|for this|for everything|kindly|ever so much)[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bthanks?,?\\s*-?\\s*[A-Z][a-z]+$", "flags": "gm", "replace": "" },
        { "find": "\\bmany thanks[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bthx[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bty[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bthanking you[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bmuch appreciated[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bI appreciate (it|that|this|your help|your time|your assistance)[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bappreciate (it|that|this|your help|your time)[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bgreatly appreciated[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bsorry (for|about) the (long|lengthy|wordy) (message|email|text|prompt)[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bno pressure( though| at all)?[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bonly if you (want|have time|can|don't mind)[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\blet me know what you think[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bwhen(ever)? you get a chance[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bhope (that makes sense|this helps|I explained it well)[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bdoes that make sense\\??\\s*", "flags": "gi", "replace": "" },
        { "find": "\\btake your time[!.,]?\\s*", "flags": "gi", "replace": "" }
      ]
    },
    {
      "id": "remove-please",
      "name": "Remove Pleasantries",
      "description": "Removes \"please\" from requests",
      "explanation": "AI models respond equally well without \"please\" - saves tokens.",
      "example": { "before": "Please write a poem", "after": "Write a poem" },
      "enabled": true,
      "category": "fluff",
      "priority": 10,
      "patterns": [
        { "find": "\\bplease\\s+", "flags": "gi", "replace": "" },
        { "find": ",?\\s*please[!.,]?$", "flags": "gi", "replace": "" },
        { "find": "\\bpretty please\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bif you please\\s*", "flags": "gi", "replace": "" }
      ]
    },
    {
      "id": "remove-polite-requests",
      "name": "Remove Polite Phrases",
      "description": "Removes \"could you\", \"would you\" etc.",
      "explanation": "Direct commands work better than polite questions.",
      "example": { "before": "Could you help me with...", "after": "Help me with..." },
      "enabled": true,
      "category": "fluff",
      "priority": 11,
      "patterns": [
        { "find": "\\bcould you (please\\s+)?(kindly\\s+)?", "flags": "gi", "replace": "" },
        { "find": "\\bwould you (please\\s+)?(mind\\s+)?(kindly\\s+)?", "flags": "gi", "replace": "" },
        { "find": "\\bcan you (please\\s+)?", "flags": "gi", "replace": "" },
        { "find": "\\bwill you (please\\s+)?", "flags": "gi", "replace": "" },
        { "find": "\\bmight you (be able to\\s+)?", "flags": "gi", "replace": "" },
        { "find": "\\bif you (could|would|might|can|will)\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bwould it be possible (for you )?to\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bis it possible (for you )?to\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bdo you think you could\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bwould you be (so kind|willing|able) (as )?to\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bi was hoping (you could|that you might)\\s+", "flags": "gi", "replace": "" }
      ]
    },
    {
      "id": "remove-appreciation",
      "name": "Remove Appreciation Prefixes",
      "description": "Removes \"I would appreciate...\"",
      "explanation": "Appreciation adds tokens without affecting output quality.",
      "example": { "before": "I would appreciate if you could explain...", "after": "Explain..." },
      "enabled": true,
      "category": "fluff",
      "priority": 12,
      "patterns": [
        { "find": "\\bI would (really\\s+)?appreciate (it\\s+)?if you could\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bI('d| would) (really\\s+)?like (it\\s+)?if you could\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bI was (kind of\\s+)?(maybe\\s+)?wondering if (you could|perhaps you might)\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bI was wondering if\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bif you don't mind,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bif (that's|it's) (ok|okay|alright|fine|not too much trouble),?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bif possible,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bif it's not too much (trouble|to ask)[,.]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bwhen(ever)? you (get|have) (a\\s+)?(chance|time|moment),?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\band you have the time,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bI'd be grateful if you could\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bit would be great if you could\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bit would mean a lot if you could\\s+", "flags": "gi", "replace": "" }
      ]
    },
    {
      "id": "remove-apologies",
      "name": "Remove Apologies",
      "description": "Removes unnecessary apologies",
      "explanation": "Apologizing to AI wastes tokens.",
      "example": { "before": "Sorry to bother you, but...", "after": "" },
      "enabled": true,
      "category": "fluff",
      "priority": 13,
      "patterns": [
        { "find": "\\bI don't want to be a (bother|nuisance|pain)( or anything)?[,.]?\\s*(but\\s+)?", "flags": "gi", "replace": "" },
        { "find": "\\bsorry to (bother|trouble|bug|disturb|interrupt) you[,.]?\\s*(but\\s+)?", "flags": "gi", "replace": "" },
        { "find": "\\bsorry (if this is|for being|for asking|to ask|for the)[^.,!]*[.,!]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bI (hope|don't want to) (this isn't|be|waste your)[^.,!]*[.,!]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bapologies (for|if)[^.,!]*[.,!]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bpardon (me|my)[^.,!]*[.,!]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bexcuse (me|my)[^.,!]*[.,!]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bI know (this is|you're busy|I'm asking a lot)[^.,!]*[.,!]?\\s*(but\\s+)?", "flags": "gi", "replace": "" }
      ]
    },
    {
      "id": "remove-fillers",
      "name": "Remove Filler Words",
      "description": "Removes \"just\", \"basically\", \"actually\"",
      "explanation": "Filler words add no meaning and dilute clarity.",
      "example": { "before": "I just really need you to basically help", "after": "I need you to help" },
      "enabled": true,
      "category": "fluff",
      "priority": 15,
      "patterns": [
        { "find": "\\bjust\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bbasically,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bactually,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\breally\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bliterally\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bsimply\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bhonestly,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bfrankly,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bkind of\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bsort of\\s+", "flags": "gi", "replace": "" },
        { "find": "\\ba little (bit\\s+)?", "flags": "gi", "replace": "" },
        { "find": "\\babsolutely\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bdefinitely\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bcertainly\\s+", "flags": "gi", "replace": "" },
        { "find": "\\banyway,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\banyways,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bso,\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bwell,\\s+", "flags": "gi", "replace": "" },
        { "find": "\\blike,\\s+", "flags": "gi", "replace": "" },
        { "find": "\\byou know,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bi mean,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\btotally\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bcompletely\\s+", "flags": "gi", "replace": "" }
      ]
    },
    {
      "id": "remove-softeners",
      "name": "Remove Softening Language",
      "description": "Removes \"would be cool if\", \"it might be nice\"",
      "explanation": "Softening language weakens requests.",
      "example": { "before": "It would be cool if you could...", "after": "" },
      "enabled": true,
      "category": "fluff",
      "priority": 16,
      "patterns": [
        { "find": "\\bit would be (really\\s+)?(cool|nice|great|awesome|amazing|helpful|fantastic) if you could\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bit (might|would) be (nice|good|helpful|useful) (if|to)\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bI was thinking (that )?(maybe,?\\s*)?", "flags": "gi", "replace": "" },
        { "find": "\\bmaybe,?\\s*just\\s*maybe,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bif it's not too much (trouble|to ask)\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bno worries if (you can't|not)[^.,]*[.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bit's (totally )?fine if (you can't|not)[^.,]*[.,]?\\s*", "flags": "gi", "replace": "" }
      ]
    },
    {
      "id": "remove-self-reference",
      "name": "Remove Self-References",
      "description": "Removes \"I want you to\", \"I need you to\"",
      "explanation": "The AI knows you are asking. These phrases are redundant.",
      "example": { "before": "I want you to write a story", "after": "Write a story" },
      "enabled": true,
      "category": "redundancy",
      "priority": 20,
      "patterns": [
        { "find": "\\bI (want|need|would like|'d like) you to\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bI (want|need|am looking for|am trying to get)\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bI('m| am) (trying|looking|hoping|wanting|needing) to\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bwhat I need is\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bwhat I('m| am) looking for is\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bI('m| am) asking (you )?(to|for)\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bmy (request|ask|question) is\\s+", "flags": "gi", "replace": "" }
      ]
    },
    {
      "id": "remove-ai-awareness",
      "name": "Remove AI Awareness",
      "description": "Removes \"As an AI\", \"You are an AI\"",
      "explanation": "The AI knows what it is - stating this wastes tokens.",
      "example": { "before": "As an AI, you can...", "after": "You can..." },
      "enabled": true,
      "category": "redundancy",
      "priority": 21,
      "patterns": [
        { "find": "\\bAs an AI( language model| assistant| chatbot)?,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bYou are an AI( language model| assistant| chatbot)?,?\\s*(so\\s+)?", "flags": "gi", "replace": "" },
        { "find": "\\bI know you('re| are) (an AI|a language model|a chatbot|not human|just a computer),?\\s*(but\\s+)?", "flags": "gi", "replace": "" },
        { "find": "\\bsince you('re| are) (an AI|a language model|a chatbot),?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bbeing an AI,?\\s*", "flags": "gi", "replace": "" }
      ]
    },
    {
      "id": "remove-opinion-markers",
      "name": "Remove Opinion Markers",
      "description": "Removes \"I think\", \"I believe\"",
      "explanation": "Everything you write is your input - marking it as opinion is redundant.",
      "example": { "before": "I think you should...", "after": "You should..." },
      "enabled": true,
      "category": "redundancy",
      "priority": 22,
      "patterns": [
        { "find": "\\bI (think|believe|feel|suppose|guess|assume|imagine|reckon) (that\\s+)?", "flags": "gi", "replace": "" },
        { "find": "\\bin my (opinion|view|mind),?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bpersonally,?\\s*(I\\s+)?", "flags": "gi", "replace": "" },
        { "find": "\\bfrom my perspective,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bto me,?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bas far as I('m| am) concerned,?\\s*", "flags": "gi", "replace": "" }
      ]
    },
    {
      "id": "remove-redundant-phrases",
      "name": "Remove Redundant Phrases",
      "description": "Removes \"in order to\", \"due to the fact\"",
      "explanation": "These phrases can be shortened without losing meaning.",
      "example": { "before": "in order to achieve", "after": "to achieve" },
      "enabled": true,
      "category": "redundancy",
      "priority": 25,
      "patterns": [
        { "find": "\\bin order to\\s+", "flags": "gi", "replace": "to " },
        { "find": "\\bdue to the fact that\\s+", "flags": "gi", "replace": "because " },
        { "find": "\\bfor the purpose of\\s+", "flags": "gi", "replace": "to " },
        { "find": "\\bin the event that\\s+", "flags": "gi", "replace": "if " },
        { "find": "\\bat this point in time\\b", "flags": "gi", "replace": "now" },
        { "find": "\\bin the near future\\b", "flags": "gi", "replace": "soon" },
        { "find": "\\bthe fact that\\s+", "flags": "gi", "replace": "that " },
        { "find": "\\bwith regards? to\\s+", "flags": "gi", "replace": "regarding " },
        { "find": "\\bin the context of\\s+", "flags": "gi", "replace": "for " },
        { "find": "\\ba large number of\\s+", "flags": "gi", "replace": "many " },
        { "find": "\\bthe vast majority of\\s+", "flags": "gi", "replace": "most " },
        { "find": "\\bin spite of the fact that\\s+", "flags": "gi", "replace": "although " },
        { "find": "\\buntil such time as\\s+", "flags": "gi", "replace": "until " },
        { "find": "\\bhas the ability to\\s+", "flags": "gi", "replace": "can " },
        { "find": "\\bhave the ability to\\s+", "flags": "gi", "replace": "can " },
        { "find": "\\bis able to\\s+", "flags": "gi", "replace": "can " },
        { "find": "\\bare able to\\s+", "flags": "gi", "replace": "can " },
        { "find": "\\bis capable of\\s+", "flags": "gi", "replace": "can " },
        { "find": "\\bprior to\\s+", "flags": "gi", "replace": "before " },
        { "find": "\\bsubsequent to\\s+", "flags": "gi", "replace": "after " },
        { "find": "\\bin addition to\\s+", "flags": "gi", "replace": "besides " },
        { "find": "\\bin the process of\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bwith the exception of\\s+", "flags": "gi", "replace": "except " },
        { "find": "\\bin close proximity to\\s+", "flags": "gi", "replace": "near " }
      ]
    },
    {
      "id": "simplify-verbose",
      "name": "Simplify Verbose Phrases",
      "description": "Simplifies wordy constructions",
      "explanation": "Shorter phrases are clearer and save tokens.",
      "example": { "before": "make sure that you", "after": "ensure" },
      "enabled": true,
      "category": "verbosity",
      "priority": 31,
      "patterns": [
        { "find": "\\bmake sure (that\\s+)?(you\\s+)?", "flags": "gi", "replace": "ensure " },
        { "find": "\\bprovide me with\\s+", "flags": "gi", "replace": "give " },
        { "find": "\\btell me about\\s+", "flags": "gi", "replace": "explain " },
        { "find": "\\blet me know\\s+", "flags": "gi", "replace": "tell me " },
        { "find": "\\bgo ahead and\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bfeel free to\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bdon't hesitate to\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bany help you (might|may|could|would) (be able to\\s+)?provide[!.,]?\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bhelp me out with something\\??\\s*", "flags": "gi", "replace": "help with: " },
        { "find": "\\bpotentially\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bwriting some code for me\\??\\s*", "flags": "gi", "replace": "write code: " },
        { "find": "\\btake into (account|consideration)\\s+", "flags": "gi", "replace": "consider " },
        { "find": "\\bgive (some )?consideration to\\s+", "flags": "gi", "replace": "consider " },
        { "find": "\\bcome up with\\s+", "flags": "gi", "replace": "create " },
        { "find": "\\bfigure out\\s+", "flags": "gi", "replace": "determine " },
        { "find": "\\bpoint out\\s+", "flags": "gi", "replace": "note " },
        { "find": "\\bkeep in mind\\s+", "flags": "gi", "replace": "remember " },
        { "find": "\\bput together\\s+", "flags": "gi", "replace": "create " },
        { "find": "\\bbreak down\\s+", "flags": "gi", "replace": "explain " }
      ]
    },
    {
      "id": "remove-modifiers",
      "name": "Remove Weak Modifiers",
      "description": "Removes \"very\", \"extremely\"",
      "explanation": "Weak modifiers often dilute meaning.",
      "example": { "before": "very important", "after": "important" },
      "enabled": true,
      "category": "verbosity",
      "priority": 32,
      "patterns": [
        { "find": "\\bvery\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bextremely\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bquite\\s+", "flags": "gi", "replace": "" },
        { "find": "\\brather\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bsomewhat\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bhighly\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bincredibly\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bremarkably\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bparticularly\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bespecially\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bslightly\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bfairly\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bmoderately\\s+", "flags": "gi", "replace": "" }
      ]
    },
    {
      "id": "remove-hedging",
      "name": "Remove Hedging",
      "description": "Removes \"I think\", \"maybe\", \"perhaps\"",
      "explanation": "Hedging language makes prompts less clear.",
      "example": { "before": "I think you should...", "after": "You should..." },
      "enabled": true,
      "category": "qualifiers",
      "priority": 40,
      "patterns": [
        { "find": "\\bperhaps\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bmaybe\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bpossibly\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bprobably\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bI guess\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bI suppose\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bif at all possible\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bto some extent\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bin a way\\s*", "flags": "gi", "replace": "" },
        { "find": "\\bmore or less\\s*", "flags": "gi", "replace": "" }
      ]
    },
    {
      "id": "remove-appearance",
      "name": "Remove Appearance Phrases",
      "description": "Removes \"it seems like\"",
      "explanation": "These phrases express uncertainty. State things directly.",
      "example": { "before": "It seems like you could...", "after": "You could..." },
      "enabled": true,
      "category": "qualifiers",
      "priority": 41,
      "patterns": [
        { "find": "\\bit (seems|appears|looks) (like|as if|as though|that)\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bseemingly\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bapparently\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bostensibly\\s+", "flags": "gi", "replace": "" },
        { "find": "\\bpresumably\\s+", "flags": "gi", "replace": "" }
      ]
    },
    {
      "id": "optimize-format-requests",
      "name": "Optimize Format Requests",
